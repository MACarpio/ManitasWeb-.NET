@model ManitasWeb.Models.Producto
@{
  ViewData["Title"] = "Details";
}

<div class="container-detalles">
  <h1 class="heading titulo-detalles"><span>@Html.DisplayFor(model => model.Nombre)</span> </h1>
  <div class="details-content">
    <div class="img-detalles">
      <img class="img-producto" src="@Url.ActionLink("MostrarImagen","Catalogo",new { id=Model.Id })"
        alt="@Html.DisplayFor(model => model.ImagenNom)" />
    </div>
    <div class="info-detalles">
      <label class="dec-label">Descripci√≥n</label>
      <p class="desc-product">@Html.DisplayFor(model => model.Descripcion)</p>
      <label class="dec-label">Categoria</label>
      <p class="desc-product">@Html.DisplayFor(model => model.Categ.NomCategoria)</p>
      <label class="dec-label">Material</label>
      <p class="desc-product">@Html.DisplayFor(model => model.Mater.NomMaterial)</p>
      <label class="dec-label">Precio</label>
      <h5 class="desc-product precio">S/ @Html.DisplayFor(model => model.Precio)</h5>
    </div>
  </div>
</div>
