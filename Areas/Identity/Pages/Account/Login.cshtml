@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br>

<div class="container-form">
    <div class="seccion-titulo">
        <h5 class="titulo-prim">Log in</h5>
    </div>
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email" class="control-label">Correo :</label>
            <input asp-for="Input.Email" class="form-control" placeholder="Escriba su nombre completo" type="text"
                required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group" style="text-align: left;">
            <label asp-for="Input.Password" class="control-label">Contraseña :</label>
            <input asp-for="Input.Password" class="form-control" placeholder="Escriba su email" type="password"
                required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-prim form-control btn-form">Log in</button>
        </div>
        <div class="form-group">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar una cuenta nueva</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
            </p>
        </div>

    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
